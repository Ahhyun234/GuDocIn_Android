<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <ImageView
        android:id="@+id/imgBasketPhoto"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round" />

   <TextView
        android:id="@+id/txtBasketProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/imgBasketPhoto"
        app:layout_constraintTop_toTopOf="@+id/imgBasketPhoto"
        tools:text="상품명" />

    <TextView
        android:id="@+id/txtBasketProductPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@+id/txtBasketProductName"
        app:layout_constraintStart_toStartOf="@+id/txtBasketProductName"
        tools:text="가격" />

    <TextView
        android:id="@+id/txtBasketProductOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/txtBasketProductPrice"
        app:layout_constraintTop_toBottomOf="@+id/txtBasketProductPrice"
        tools:text="옵션명" />

</androidx.constraintlayout.widget.ConstraintLayout>