<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingRight="10dp"
    android:paddingLeft="10dp">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:paddingTop="100dp"
            android:id="@+id/txtUserName"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="방우진님의 적립금"/>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtUserPoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:textSize="18sp"
                    android:text="30000원"/>





        <Button

            android:id="@+id/btnPurchasedetails"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내역확인"
            />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView

                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내 구독정보"/>

            <ImageView
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/diary"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_marginTop="20dp"
                    android:layout_width="200dp"
                    android:layout_height="80dp"
                    android:src="@drawable/mygudoclist"/>

                <ImageView
                    android:layout_marginTop="20dp"
                    android:layout_width="200dp"
                    android:layout_height="80dp"
                    android:src="@drawable/review"/>



            </LinearLayout>
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="회원정보"/>

            <TextView
                android:id="@+id/txtEditUserInfo"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회원정보 수정"/>

            <TextView

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#808080"/>


            <TextView

                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="적립금"/>

            <TextView
                android:id="@+id/txtUserPointDetails"
                android:layout_marginTop="10dp"
                android:textSize="17sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="적립금 세부내역"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#808080"/>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="정기구독 상품"/>

            <TextView
                android:id="@+id/txtUserProductpurchasedetails"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="정기구독 상품 구매 내역"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#808080"/>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="고객센터"/>

            <TextView
                android:id="@+id/txtguide"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이용가이드"/>

            <TextView

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#808080"/>

            <TextView
                android:id="@+id/txtnotice"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="공지사항"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#808080"/>

            <TextView
                android:id="@+id/txtquestions"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="자주 묻는 질문"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#808080"/>

            <TextView
                android:id="@+id/txttermsofuse"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="서비스 이용약관"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#808080"/>









        </LinearLayout>




    </LinearLayout>

    </ScrollView>

</LinearLayout>

